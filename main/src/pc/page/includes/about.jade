#about
  .mask
    .page
      section#concept(name='concept')
        img.i18n(src='images/concept_ja.png', data-i18n='about.conceptimg', alt='concept')
        include ./play_buttons.jade
      section#album(name='album')
        img(src='images/album-jacket.jpg')
        .album_info
          img(src='images/album-info.png')
          .store_link
            span.s14 Buy via:
            ul.s20
              li
                a.link_itunes.blank(href='#{link.itunes}', target='_blank') iTunes
              li /
              li
                a.link_amazon.blank(href='#{link.amazon}', target='_blank') Amazon
              li /
              li
                a.link_cdbaby.blank(href='#{link.cdbaby}', target='_blank') CD Baby

      section#kamra(name='kamra')
        img(src='images/profile-kamra.png')
        .info
          span.s24 KAMRA
          span.s14  / Yuichi Nakamura
          ul.s14
            li
              a.link_kamra_soundcloud.blank(href='#{link.soundcloud}' target='_blank') SoundCloud
            li /
            li
              a.link_kamra_tw.blank(href='#{link.twitter}' target='_blank') Twitter

        p.about_kamra.s14.i18n(data-i18n='about.kamra') #{about.kamra}

        hr.mini

        .colum2
          .colum
            h3 invisi-dir.
            p.s14.i18n(data-i18n='about.invisidir') #{about.invisidir}
            a.link_invisidir.blank(href='http://invisi-dir.com' target='_blank') http://invisi-dir.com
          .colum
            h3 invisible designs lab.
            p.s14.i18n(data-i18n='about.invisibledesignslab') #{about.invisibledesignslab}
            a.link_invisi.blank(href='http://invisi.jp' target='_blank') http://invisi.jp
      section#credit(name='credit')
        .colum2
          for credit in credits
            .credit
              a.play(href="#{credit.play}")
                img(src="images/#{credit.photo}")
                img(src="images/credit-overlay.png")
              .info
                span.part.s14 #{credit.part}
                span.name.s20 #{credit.name}
                if credit.url !== undefined
                  hr.mini
                  a.link_credit.blank.s14(href="#{credit.url}" target="_blank") #{credit.site}

        include ./play_buttons.jade
  .navi
    ul
      li.concept
        a(href='#concept').selected
          img(src='images/about-nav-concept.png' width=282/2 height=61/2)
      li
        img(src='images/about-nav-line.png' width=22/2 height=46/2)
      li
        a(href='#album')
          img(src='images/about-nav-album.png' width=223/2 height=49/2)
      li
        img(src='images/about-nav-line.png' width=22/2 height=46/2)
      li
        a(href='#kamra')
          img(src='images/about-nav-kamra.png' width=267/2 height=43/2)
      li
        img(src='images/about-nav-line.png' width=22/2 height=46/2)
      li
        a(href='#credit')
          img(src='images/about-nav-credit.png' width=218/2 height=49/2)
    button.close
      img(src='images/button-close.png')
