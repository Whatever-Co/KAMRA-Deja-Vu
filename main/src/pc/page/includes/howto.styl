// howto.styl

#howto
  display none
  .page
    margin 200px auto 200px auto
  .colum2
    margin 200px 0 70px 0
  .colum
    width 420px
    img
      width 420px
      height 236px
      display block
    h4
      font-size 14px
      span
        font-size 14px
        display block
        white-space nowrap
    ul, li
      margin 0.7em
      padding 0
  .vline
    display block
    background url(images/v-line.png) 32px 0px repeat-y
    //padding 10px 0 10px 88px
    padding 0px 0 10px 88px
    &.before
      height 20px
    &.after
      height 40px
    ul
      margin-bottom 50px
  .icon
    display flex
    justify-content flex-start
    align-items center
    height 68px
    background-repeat no-repeat
    background-size 68px 68px
    padding  0 0 0 88px
  .webcam
    background-image url(images/howto-webcam-heading.png)
  .photo
    background-image url(images/howto-photo-heading.png)
  .step1
    background-image url(images/howto-01.png)
  .step2
    background-image url(images/howto-02.png)
  .step3
    background-image url(images/howto-03.png)
  .step4
    background-image url(images/howto-04.png)
  .step5
    background-image url(images/howto-05.png)
  
  .navi
    position fixed
    width 100%
    top 0
    display flex
    justify-content center
    margin-top 50px
    .header
      display block

  .hr_disclaimer
    display block
    margin-top 90px

#disclaimer
  margin 80px 0
  h3
    text-align center
    font-size 14px
    margin 0 0 50px 0
  pre
    overflow auto
    white-space pre-wrap
    line-height 200%