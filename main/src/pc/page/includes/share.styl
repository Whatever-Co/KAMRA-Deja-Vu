#share
  display none
  width 100%
  height 100%
  padding 50px
  .share-inner
    display flex
    flex-wrap nowrap
    justify-content space-between
    align-items flex-end
    position relative
    width 100%
    height 100%
  .share-buttons
    text-align center
    font-size 0
    button
      margin 0 10px
    > img
      margin-bottom 22px
      opacity 0.7

  button.button-top
    background-image url(images/button-top.png)
    &:hover
      background-image url(images/button-top-h.png)
  button.button-twitter
    background-image url(images/button-twitter.png)
    &:hover
      background-image url(images/button-twitter-h.png)
  button.button-facebook
    background-image url(images/button-facebook.png)
    &:hover
      background-image url(images/button-facebook-h.png)
  button.button-replay
    background-image url(images/button-replay.png)
    &:hover
      background-image url(images/button-replay-h.png)