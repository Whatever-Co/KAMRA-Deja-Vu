#top
  display none
  position fixed
  width 100%
  height 100%
  transition filter 0.5s
  ul
    display flex
    list-style none
    justify-content space-between
    align-items flex-end
    align-content flex-start

  .top_button
    position absolute
    width 100%
    bottom 20%
    text-align center
    .play_buttons
      margin-bottom 20px

  .play-shared
    display none
    position absolute
    bottom 22%
    width 100%
    text-align center

  .album-info
    position absolute
    width 382px
    height 100px
    left 50px
    bottom 50px
    .info
      position absolute
      left 118px
      bottom 0
      width 264px
      font-size 12px
      ul
        margin-top 5px
      li
        a
          padding 0 18px 0 0
          background url(images/icon_blank.png) no-repeat 94% 50%

  .navi
    position absolute
    right 50px
    bottom 50px
    width 534px
    li
      span
        font-size 11px
