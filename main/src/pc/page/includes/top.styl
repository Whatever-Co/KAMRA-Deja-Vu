#top
  display none
  position fixed
  width 100%
  height 100%
  transition filter 0.5s
  ul
    display flex
    list-style none
    justify-content space-between
    align-items flex-end
    align-content flex-start
    margin 12px 0 -3px -50px
  li
    padding 0 18px 0 10px
    border-width 1px
    border-color rgba(255, 255, 255, 0.7)
    border-left-style solid
    &:first-child
      border-left-style none
  .play_buttons
    position absolute
    bottom 22%
    // display none
  .play-shared
    display none
    position absolute
    bottom 22%
    width 100%
    text-align center

  .album-info
    position absolute
    width 382px
    height 100px
    left 50px
    bottom 50px
    .info
      position absolute
      left 118px
      bottom 0
      font-size 12px
      ul
        margin 12px 0 -3px -50px
      li
        background url(images/icon_blank.png) no-repeat 90% 50%

  .navi
    position absolute
    right 50px
    bottom 50px
    li
      span
        font-size 11px
