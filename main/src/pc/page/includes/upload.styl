#upload-step1
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display none
  // display flex
  flex-direction column
  align-items center
  justify-content center
  font-size 16px
  > img
    margin 60px 0

#upload-step2
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display none
  // display flex
  flex-direction column
  align-items center
  justify-content center
  .image-file
    display none
  .home
    margin-top 30px

#upload-step3
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  margin-left 60px
  display none
  // display flex
  flex-direction column
  align-items flex-start
  justify-content center
  p
    margin-bottom 30px
  .buttons
    button
      margin 0
      padding 0
      font-size 0
      margin-right 30px
    button.ok
      background-image url(images/upload-ok.png)
      &:hover
        background-image url(images/upload-ok-h.png)
    button.retry
      background-image url(images/upload-retry.png)
      &:hover
        background-image url(images/upload-retry-h.png)

#upload-error
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display none
  // display flex
  flex-direction column
  align-items center
  justify-content center
  p
    margin 20px 0
    font-size 14px
  .buttons
    margin-top 10px
    font-size 0
    button
      margin 0 15px
      padding 0
