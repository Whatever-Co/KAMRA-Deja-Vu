doctype html
html.no-js
  head
    base(href='/')
    noscript
      meta(http-equiv='refresh' content='0; URL=sp/')
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title #{title}
    meta(name='description', content='#{description}')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    link(rel='stylesheet', href='normalize.css')
    link(href='https://fonts.googleapis.com/css?family=EB+Garamond' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='index.css')
    include ./includes/og.jade
    script.
      if (location.hash == '#shared') window.close()
  body
    #canvas-clip
      canvas#main
      .step1(data-i18n='[html]webcam.step1') !{webcam.step1}
      .step2
        canvas.progress(width=200, height=200)
        p(data-i18n='[html]webcam.step2') !{webcam.step2}
    #page
      #loading
        div.circle
          canvas
          img(src='images/loading.png')

    .noise.overlay
    
    a#siteoftheday(href='http://www.thefwa.com/site/deja-vu-kamra', target='_blank' style='opacity:1.0;')
      img(src='images/DayTopLeft.png' style='position:absolute;top:0;left:0;z-index:10000;')
    
    script(src='libs/preloadjs-0.6.1.min.js')
    script(src='bootstrap.js')
