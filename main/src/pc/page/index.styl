//----------------------
// 0. Default settings
//----------------------

*
  box-sizing border-box

html, body
  padding 0
  margin 0
  
body
  font-family "adobe-garamond-pro", Garamond, YuMincho, '游明朝', 'Hiragino Mincho ProN', serif
  font-size 12px
  letter-spacing 0.3em
  color rgba(255, 255, 255, 0.7)
  background-color #031a29

button
  background none
  border none
  outline none
  opacity 0.7
  transition opacity 0.5s
  &:hover
    opacity 1.0

a
  color rgb(255, 255, 255)
  text-decoration none
  opacity 0.7
  transition all 1.0s
  &:hover
    opacity 1.0
  &.blank
    background url(images/icon_blank.png) no-repeat 100% 50%

h2
  font-size 32px
h3
  font-size 18px


//----------------------
// 1. Common parts
//----------------------

.blur
  transition filter 1.0s
  filter blur(5px)

button.close
  position absolute
  top 50px
  right 50px

.play_buttons
  width 100%
  text-align center
  .buttons
    position relative
    width 100%
    top 20px
    text-align center
    button
      margin 0 20px
      
.mask
  position fixed
  width 100%
  height 100%
  overflow auto
  mask-image -webkit-gradient(linear, left 0, left 100%, from(rgba(0,0,0,0.1)), color-stop(0.25, rgba(0,0,0,1)), color-stop(0.75, rgba(0,0,0,1)), to(rgba(0,0,0,0.1)))

.page
  position relative
  width 940px
  margin 100px auto 100px auto

.colum2
  position relative
  width 100%
  display flex
  flex-wrap wrap
  align-items stretch
  justify-content space-between


//----------------------
// 2. Elements
//----------------------

#canvas-clip
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  
canvas#main
  transform-origin left top

#page
  position absolute
  //position fixed
  left 0
  top 0
  width 100%
  min-width 1000px
  height 100%

#loading
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  .circle
    width 400px
    height 400px
    display flex
    position relative
    align-items center
    justify-content center
  canvas
    position absolute
    width 400px
    height 400px
    left 0

@import 'includes/top'

@import 'includes/webcam'
@import 'includes/upload'

@import 'includes/about'
@import 'includes/howto'

#share
  display none
  width 100%
  height 100%
  padding 50px
  .share-inner
    display flex
    flex-wrap nowrap
    justify-content space-between
    align-items flex-end
    position relative
    width 100%
    height 100%
    padding 30px
    background url(images/h-line.png) top repeat-x, url(images/h-line.png) bottom repeat-x, url(images/v-line.png) left repeat-y, url(images/v-line.png) right repeat-y
  .share-buttons
    text-align center
    > img
      margin-bottom 10px


.overlay
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  z-index 10000
  pointer-events none

.noise
  background url(images/noise.png)
  z-index 10001
  opacity 0.6




