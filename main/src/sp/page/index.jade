doctype html
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title KAMRA - Deja Vu - Artifitial Intelligence
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='../normalize.css')
    link(href='https://fonts.googleapis.com/css?family=EB+Garamond' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='index.css')
    include ./includes/og.jade
  body
    #youtube_container
      #youtube(data-videoid='#{youtubeId}')
      #youtube_overlay
        img(src='images/thumbnail.jpg' alt='thumbnail')
        button
          img(src='images/button-play.png' alt='play button')
    #page
      .content
        h2 The Special Version of Music Video
        .support_description(data-i18n='support.description') #{support.description}
        .environment
          img.i18n(src='images/environment-ja.png', data-i18n='support.img', alt='environment')
        hr.mini
        section.concept
          img.i18n(src='images/concept_ja.png', data-i18n='about.conceptimg', alt='concept')
        section.album.m-top40
          img.m-bottom30(src='images/album-jacket.jpg' alt='album jacket')
          img.m-bottom30(src='images/album-title.png' alt='album title')
          span Buy via:
          br
          br
          ul.s14
            li
              a.link_itunes.blank(href='#{link.itunes}', target='_blank') iTunes
            li /
            li
              a.link_amazon.blank(href='#{link.amazon}', target='_blank') Amazon
            li /
            li
              a.link_cdbaby.blank(href='#{link.cdbaby}', target='_blank') CD Baby
        hr
        section.kamra
          .col2
            #profile_kamra
            .info
              img.name(src='images/kamra-name.png')
              .social
                a.link_soundcloud.blank(href='#{link.soundcloud}', target='_blank') SoundCloud
                br
                a.link_kamratwitter.blank(href='#{link.twitter}', target='_blank') Twitter

          p.m-top30(data-i18n='about.kamra') #{about.kamra}
        hr.mini
        section.invisi
          h3 invisi-dir.
          p(data-i18n='about.invisidir') #{about.invisidir}
          a.link_invisidir.blank(href='http://invisi-dir.com' target='_blank') http://invisi-dir.com
        hr.mini
        section.invisi
          h3 invisible designs lab.
          p(data-i18n='about.invisibledesignslab') #{about.invisibledesignslab}
          a.link_invisi.blank(href='http://invisi.jp' target='_blank') http://invisi.jp
        hr
        section.credits
          .col2
            for credit in credits
              .credit.m-bottom30
                .part #{credit.part}
                .name.s12 #{credit.name}
                if credit.url !== undefined
                  a.blank(href="#{credit.url}" target="_blank") #{credit.site}
    .share
      .buttons
        a.button.button_twitter(
          title='Twitter',
          href='http://twitter.com/share',
          onClick="window.open(this.href,'tweetwindow','width=550,height=450,personalbar=0,toolbar=0,scrollbars=1,resizable=1');return false;"
        )
          img(src='images/button-twitter.png' alt='twitter')
        a.button.button_facebook(
          title='Facebook',
          href='http://www.facebook.com/share.php?u=#{social.url}',
          onClick="window.open(this.href,'facebookwindow','width=550,height=450,personalbar=0,toolbar=0,scrollbars=1,resizable=1');return false;"
        )
          img(src='images/button-facebook.png' alt='facebook')
        a.button.button_line.mobile_only(
          title='Line',
          href='line://msg/text/#{social.text}',
          target='_blank'
        )
          img(src='images/button-line.png' alt='line')

    .footer
      button
        img(src='images/button-back.png' alt='top')
