doctype html
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    title KAMRA - Deja Vu - Artifitial Intelligence
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='../normalize.css')
    link(rel='stylesheet', href='index.css')
  body
    #youtube(data-videoid='#{youtubeId}')
      .bg
        img(src='images/thumbnail.jpg' alt='thumbnail')
      button
        img(src='images/button-play.png' alt='play button')
    #page
      .content
        h2 The Special Version of Music Video
        span(data-i18n='support.description') #{support.description}
        .enviroment
          span(data-i18n='support.envitoments') #{support.envitoments}
          ul.s9
            li.check(data-i18n='support.env1') #{support.env1}
            li.check(data-i18n='support.env2') #{support.env2}
            li(data-i18n='support.env3') #{support.env3}
            li(data-i18n='support.env4') #{support.env4}
        hr.mini
        section.concept
          img.i18n(src='images/concept_ja.png', data-i18n='about.conceptimg', alt='concept')
        section.album
          img(src='images/album-jacket.jpg' alt='album jacket')
          h3 KAMRA - Artificial Emotions
          span Buy via:
          ul.s14
            li
              a.blank(href='#{link.itunes}', target='_blank') iTunes
            li /
            li
              a.blank(href='#{link.amazon}', target='_blank') Amazon
            li /
            li
              a.blank(href='#{link.cdbaby}', target='_blank') CD Baby
        hr
        section.kamra
          .col2
            #profile_kamra
            .info
              .name.s19 KAMRA
              span Yuichi Nakamura
              .social
                a.blank(href='#{link.soundcloud}', target='_blank') SoundCloud
                br
                a.blank(href='#{link.twitter}', target='_blank') Twitter

          p(data-i18n='about.kamra') #{about.kamra}
        hr.mini
        section
          h3 invisi-dir.
          p(data-i18n='about.invisidir') #{about.invisidir}
          a.blank(href='http://invisi-dir.com' target='_blank') http://invisi-dir.com
        hr.mini
        section
          h3 invisible designs lab.
          p(data-i18n='about.invisibledesignslab') #{about.invisibledesignslab}
          a.blank(href='http://invisi.jp' target='_blank') http://invisi.jp
        hr
        section.credits
          .col2
            for credit in credits
              .credit
                .part #{credit.part}
                .name #{credit.name}
                if credit.url !== undefined
                  a.blank(href="#{credit.url}" target="_blank") #{credit.site}
        .share
          a.button.button_twitter(
            title='Twitter',
            href='http://twitter.com/share',
            onClick="window.open(this.href,'tweetwindow','width=550,height=450,personalbar=0,toolbar=0,scrollbars=1,resizable=1');return false;"
          )
            img(src='images/button-twitter.png' alt='twitter')
          a.button(
            title='Facebook',
            href='http://www.facebook.com/share.php?u=#{social.url}',
            onClick="window.open(this.href,'facebookwindow','width=550,height=450,personalbar=0,toolbar=0,scrollbars=1,resizable=1');return false;"
          )
            img(src='images/button-facebook.png' alt='facebook')
          a.button.mobile_only(
            title='Line',
            href='line://msg/text/#{social.text}',
            target='_blank'
          )
            img(src='images/button-line.png' alt='line')

        .footer
          button
            img(src='images/button-back.png' alt='top')
          img.copylight(src='images/label-copyligit.png' alt='Â© KAMRA2015')



    .noise.overlay

