//----------------------
// 0. Default settings
//----------------------


*
  box-sizing border-box

html, body
  padding 0
  margin 0

body
  font-family "adobe-garamond-pro", Garamond, YuMincho, '游明朝', 'Hiragino Mincho ProN', serif
  font-size 11px
  letter-spacing 0.3em
  color rgba(255, 255, 255, 0.7)
  background-color #021827

button
  background none
  border none
  outline none
  opacity 0.7
  transition opacity 0.5s
  &:hover
    opacity 1.0

a
  color rgb(255, 255, 255)
  text-decoration none
  opacity 0.7
  transition all 1.0s
  &:hover
    opacity 1.0
  &.blank
    background url(images/icon_blank.png) no-repeat 100% 50%

h2
  font-size 32px
h3
  font-size 18px

