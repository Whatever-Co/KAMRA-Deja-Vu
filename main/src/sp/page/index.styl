_MEDIA_SP()
  @media screen and (max-width: 639px)
    {block}

_MEDIA_PC()
  @media screen and (min-width: 640px)
    {block}

//----------------------
// 0. Default settings
//----------------------

*
  box-sizing border-box

html, body
  padding 0
  margin 0

body
  font-family "adobe-garamond-pro", Garamond, YuMincho, "游明朝", "Hiragino Mincho ProN", "Roboto Slab", serif
  font-size 11px
  letter-spacing 0.2em
  color rgba(255, 255, 255, 0.7)
  background-color #021827

button
  background none
  border none
  outline none
  opacity 0.7
  transition opacity 0.5s
  &:hover
    opacity 1.0

p
  letter-spacing 0.2em

a
  color rgb(255, 255, 255)
  text-decoration none
  opacity 0.7
  transition opacity 1.0s
  &:hover
    opacity 1.0
  &.blank
    background url(images/icon_blank.png) no-repeat right center
    background-size 10px 8px
    padding 0 16px 0 0

h2
  font-size 17px
h3
  font-size 15px
.s9
  font-size 9px
.s12
  font-size 12px
.s14
  font-size 14px
.s19
  font-size 19px

hr
  border 0
  height 1px
  background url(images/h-line.png) repeat-x 0 0
  background-size 100% 1px
  &.mini
    width 15px
    text-align left
    margin-left 0

+_MEDIA_PC()
  body
    font-size 11px*2
  h2
    font-size 17px*2
  h3
    font-size 15px*2
  .s9
    font-size 9px*2
  .s12
    font-size 12px*2
  .s14
    font-size 14px*2
  .s19
    font-size 19px*2



//----------------------
// 1. Common parts
//----------------------

.mobile_only
  display none

html.mobile
  .mobile_only
    display block

//----------------------
// 2. Elements
//----------------------

#youtube
  position relative
  width 100%
  max-width 640px
  display flex
  align-items center
  justify-content center
  margin 30px auto 0 auto
  z-index 10002
  +_MEDIA_PC()
    margin 60px auto 0 auto
  .bg
    width 100%
    img
      position relative
      width 100%
      top 0
      left 0
  button
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    +_MEDIA_SP()
      img
        width 61px
        height  61px

#page
  position relative
  max-width 640px
  margin 0 auto
.content
  position relative
  margin 0 30px 0 30px

.enviroment
  margin 25px 0 50px 0
  padding 20px
  background url(images/h-line.png) top repeat-x, url(images/h-line.png) bottom repeat-x, url(images/v-line.png) left repeat-y, url(images/v-line.png) right repeat-y
  background-color rgba(255, 255, 255, 0.04)
  ul
    list-style-type none
    margin 10 0
    padding 0
  li
    padding-left 20px
    &.check
      background url(images/icon-check.png) left center no-repeat
      background-size 10px 8px

section
  margin 38px 0 38px 0

.concept
  img
    width 100%
  p
    white-space
      nowarap
.album
  position relative
  img
    width 100%
  h3
    letter-spacing 0.1em
  ul
    display flex
    align-items center
    justify-content space-between
    padding 0
    list-style-type none
    letter-spacing 0.1em

.kamra
  position relative
  width 100%
  .col2
    display flex
  #profile_kamra
    position relative
    width 50%
    min-height 130px
    background url(images/profile-kamra.jpg) no-repeat
    background-size contain
    +_MEDIA_PC()
      min-height 320px
  img
    width 50%
  .info
    margin 0 0 0 20px
  .social
    margin 20px 0 0 0
  p
    margin 20px 0 0 0




section.credits
  .col2
    display flex
    flex-wrap wrap
    align-items stretch
    justify-content space-between
  // only sp?
  .credit
    width 120px
    letter-spacing 0em
    margin 0 0 36px 0
    +_MEDIA_PC()
      width 240px

.share
  display flex
  align-items center
  justify-content space-around
  margin 76px 24px 90px 24px
  +_MEDIA_SP()
    img
      width 50px

.footer
  display flex
  flex-direction column
  align-items center
  justify-content space-around
  margin 0 0 50px 0
  +_MEDIA_SP()
    img
      width 50%
  .copylight
    margin 29px 0 0 0


.overlay
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index 10000
  pointer-events none

.noise
  background url(/images/noise.png)
  z-index 10001
  opacity 0.6